<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightboby"
    tools:context=".sys.languageActivity">

    <!-- العنوان الرئيسي للنشاط -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/menu"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="نشاط: اختيار لغة التطبيق"
        android:textColor="@color/lightColor"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- موجه اختيار اللغة -->
    <TextView
        android:id="@+id/promptTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الرجاء اختيار لغة العرض:"
        android:textSize="18sp"
        android:textColor="@color/lightColor"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- حاوية أزرار اختيار اللغة -->
    <LinearLayout
        android:id="@+id/languageSelectorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/promptTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- زر اللغة العربية -->
        <Button
            android:id="@+id/btnAr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@drawable/btn_icon_mode"
            android:tag="ar"
            android:text="@string/btn_Arabic"
            android:textColor="#FFFFFF"
            app:toggleCheckedStateOnClick="true" />

        <!-- زر اللغة الإنجليزية -->
        <Button
            android:id="@+id/btnEn"
            android:tag="en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_English"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#D1D5DB"
            android:textColor="#1F2937" />

        <!-- زر اللغة الفرنسية -->
        <Button
            android:id="@+id/btnFr"
            android:tag="fr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_Français"
            android:backgroundTint="#D1D5DB"
            android:textColor="#1F2937" />
    </LinearLayout>

    <!-- منطقة عرض الرسائل (الترحيب ومعلومات اللغة) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@color/lightboby"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/languageSelectorLayout">

        <!-- رسالة الترحيب الرئيسية -->
        <TextView
            android:id="@+id/welcomeMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مرحباً بك في التطبيق! نتمنى لك تجربة ممتعة."
            android:textColor="#1D4ED8"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- معلومات اللغة المختارة -->
        <TextView
            android:id="@+id/languageInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="اللغة المختارة حاليًا: العربية"
            android:textColor="#60A5FA"
            android:textSize="14sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>